<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRG1_MAUI_TheChronicle.View.MainPage"
             Title="Min historia">

    <VerticalStackLayout Spacing="16" Padding="24">

        <Label Text="{Binding InventoryDisplay}" FontAttributes="Italic" />
        <Label Text="Poäng:" />
        <Label Text="{Binding Score}" FontSize="24" />

        <Label Text="{Binding CurrentScene.Text}"
               FontSize="18"
               LineBreakMode="WordWrap" />

        <CollectionView ItemsSource="{Binding VisibleChoices}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Label}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ChooseCommand}"
                            CommandParameter="{Binding .}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
